@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/slicecollection> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/collection>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/slicecollection/v0.1.0.json" ;
    ns2:shapes <https://neuroshapes.org/commons/slicecollection/shapes/SliceCollectionShape> .

<https://neuroshapes.org/commons/slicecollection/shapes/SliceCollectionShape> a ns1:NodeShape ;
    rdfs:label "Slice Collection"^^xsd:string ;
    rdfs:comment "All slices in the collection should be from the same subject."^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/collection/shapes/CollectionShape> ] [ ns1:property [ rdfs:seeAlso <https://neuroshapes.org/dash/slice/shapes/SliceShape> ;
                        ns1:class <https://neuroshapes.org/Slice> ;
                        ns1:description "The slices that are member of the collection." ;
                        ns1:name "Member" ;
                        ns1:path ns3:hadMember ] ] ) .

