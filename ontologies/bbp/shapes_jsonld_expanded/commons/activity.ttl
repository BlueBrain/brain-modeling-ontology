@prefix ns1: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/activity> a ns1:Schema ;
    owl:imports <https://neuroshapes.org/commons/protocol>,
        <https://provshapes.org/commons/activity> ;
    prov:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/activity/v0.1.4.json" ;
    ns1:shapes <https://neuroshapes.org/commons/activity/shapes/ActivityShape> .

<https://neuroshapes.org/commons/activity/shapes/ActivityShape> a sh:NodeShape ;
    rdfs:label "Activity description."^^xsd:string ;
    sh:and ( [ sh:node <https://provshapes.org/commons/activity/shapes/ActivityShape> ] [ sh:property [ sh:minCount 1 ;
                        sh:path prov:used ],
                    [ sh:class <https://bbp.epfl.ch/ontologies/core/bmo/Workflow> ;
                        sh:path prov:hadPlan ],
                    <https://neuroshapes.org/commons/protocol/shapes/HadProtocolValueShape> ] ) ;
    sh:nodeKind sh:BlankNodeOrIRI .

