@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/annotationselector> a ns2:Schema ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/annotationselector/v0.2.0.json" ;
    ns2:shapes <https://neuroshapes.org/commons/annotationselector/shapes/DocumentAreaSelectorShape>,
        <https://neuroshapes.org/commons/annotationselector/shapes/DocumentIndexSelectorShape>,
        <https://neuroshapes.org/commons/annotationselector/shapes/FragmentSelectorShape>,
        <https://neuroshapes.org/commons/annotationselector/shapes/SelectorShape>,
        <https://neuroshapes.org/commons/annotationselector/shapes/TableSelectorShape>,
        <https://neuroshapes.org/commons/annotationselector/shapes/TextPositionSelectorShape> .

<https://neuroshapes.org/commons/annotationselector/shapes/DocumentAreaSelectorShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/annotationselector/shapes/FragmentSelectorShape> ] [ ns1:property [ rdfs:comment "Used format is page=<pagenum>&viewrect=<left>,<top>,<wd>,<ht>. <left>, and <top> are measured from the top left corner of the page."^^xsd:string ;
                        ns1:hasValue "http://tools.ietf.org/rfc/rfc3778" ;
                        ns1:name "Specification" ;
                        ns1:path <https://neuroshapes.org/conformsTo> ] ] ) ;
    ns1:class <https://neuroshapes.org/PDFAreaSelector> ;
    ns1:nodeKind ns1:BlankNodeOrIRI .

<https://neuroshapes.org/commons/annotationselector/shapes/TableSelectorShape> a ns1:NodeShape ;
    rdfs:seeAlso <https://www.w3.org/TR/csv2rdf/> ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/annotationselector/shapes/DocumentIndexSelectorShape> ] [ ns1:property [ ns1:description "The number of the row of a table (e.g. '1', '1, 3')." ;
                        ns1:name "Row number" ;
                        ns1:path <https://neuroshapes.org/row> ],
                    [ ns1:description "The index(es) in the table of the columns(s) (e.g. '1', '1, 3')." ;
                        ns1:name "Column index" ;
                        ns1:path <https://neuroshapes.org/column> ] ] ) ;
    ns1:class <https://neuroshapes.org/TableSelector> .

<https://neuroshapes.org/commons/annotationselector/shapes/TextPositionSelectorShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/annotationselector/shapes/SelectorShape> ] [ ns1:property [ ns1:datatype xsd:integer ;
                        ns1:description "The starting position of the segment of text. The first character in the full text is character position 0, and the character is included within the segment." ;
                        ns1:lessThan <oa:end> ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:minInclusive 0 ;
                        ns1:name "Start offset" ;
                        ns1:path <oa:start> ],
                    [ ns1:datatype xsd:integer ;
                        ns1:description "The end position of the segment of text. The character is not included within the segment." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:minInclusive 0 ;
                        ns1:name "End offset" ;
                        ns1:path <oa:end> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "The selected segment of text." ;
                        ns1:maxCount 1 ;
                        ns1:name "Value" ;
                        ns1:path <http://schema.org/value> ] ] ) ;
    ns1:class <oa:TextPositionSelector> .

<https://neuroshapes.org/commons/annotationselector/shapes/DocumentIndexSelectorShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/annotationselector/shapes/SelectorShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:description "The index of a document media (figure) or item (equation, table,...) (e.g. '1', '2.a', 'III')." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Index" ;
                        ns1:path <https://neuroshapes.org/index> ] ] ) ;
    ns1:class <https://neuroshapes.org/DocumentIndexSelector> .

<https://neuroshapes.org/commons/annotationselector/shapes/FragmentSelectorShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/annotationselector/shapes/SelectorShape> ] [ ns1:property [ rdfs:seeAlso <https://www.w3.org/TR/annotation-model/#fragment-selector> ;
                        ns1:description "Specification of the fragment syntax." ;
                        ns1:maxCount 1 ;
                        ns1:name "Fragment specification" ;
                        ns1:nodeKind ns1:IRI ;
                        ns1:path <https://neuroshapes.org/conformsTo> ],
                    [ ns1:description "The contents of the fragment component of an IRI that describes the Segment." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Fragment value" ;
                        ns1:path <http://schema.org/value> ] ] ) ;
    ns1:class <oa:FragmentSelector> ;
    ns1:nodeKind ns1:BlankNodeOrIRI .

<https://neuroshapes.org/commons/annotationselector/shapes/SelectorShape> a ns1:NodeShape ;
    rdfs:seeAlso <https://www.w3.org/TR/annotation-model/#selectors> ;
    ns1:nodeKind ns1:BlankNodeOrIRI .

