@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/subjectcollection> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/commons/collection>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/subjectcollection/v0.1.1.json" ;
    ns3:shapes <https://neuroshapes.org/commons/subjectcollection/shapes/SubjectCollectionShape> .

<https://neuroshapes.org/commons/subjectcollection/shapes/SubjectCollectionShape> a ns1:NodeShape ;
    rdfs:label "Subject Collection"^^xsd:string ;
    rdfs:comment "All subjects in the collection should be of the same species."^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/collection/shapes/CollectionShape> ] [ ns1:property [ ns1:description "The species of this collection members" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Species" ;
                        ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/SpeciesOntologyTermShape> ;
                        ns1:path <https://neuroshapes.org/species> ],
                    [ rdfs:seeAlso <https://neuroshapes.org/dash/subject/shapes/SubjectShape> ;
                        ns1:class <https://neuroshapes.org/Subject> ;
                        ns1:description "The subject (s) that are member of the collection." ;
                        ns1:name "Member" ;
                        ns1:path ns2:hadMember ] ] ) .

