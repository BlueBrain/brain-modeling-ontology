@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/quantitativevalue> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/labeledontologyentity>,
        <https://neuroshapes.org/commons/unit> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/quantitativevalue/v0.1.2.json" ;
    ns2:shapes <https://neuroshapes.org/commons/quantitativevalue/shapes/NegativeQuantitativeValueShape>,
        <https://neuroshapes.org/commons/quantitativevalue/shapes/PositiveQuantitativeValueShape>,
        <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape>,
        <https://neuroshapes.org/commons/quantitativevalue/shapes/RangeQuantitativeValueShape>,
        <https://neuroshapes.org/commons/quantitativevalue/shapes/RepeatedQuantitativeValueShape> .

<https://neuroshapes.org/commons/quantitativevalue/shapes/NegativeQuantitativeValueShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] [ ns1:property [ ns1:maxExclusive 0 ;
                        ns1:path <http://schema.org/value> ] ] ) .

<https://neuroshapes.org/commons/quantitativevalue/shapes/PositiveQuantitativeValueShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] [ ns1:property [ ns1:minInclusive 0 ;
                        ns1:path <http://schema.org/value> ] ] ) .

<https://neuroshapes.org/commons/quantitativevalue/shapes/RangeQuantitativeValueShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/unit/shapes/UnitShape> ] [ ns1:property [ ns1:description "The maximum value of the quantitative value." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Maximum value" ;
                        ns1:path <http://schema.org/maxValue> ],
                    [ ns1:minCount 0 ;
                        ns1:path <http://schema.org/value> ],
                    [ ns1:description "The minimum value of the quantitative value." ;
                        ns1:lessThan <http://schema.org/maxValue> ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Minimum value" ;
                        ns1:path <http://schema.org/minValue> ] ] ) .

<https://neuroshapes.org/commons/quantitativevalue/shapes/RepeatedQuantitativeValueShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] [ ns1:property [ ns1:description "Number of repetitions of an activity (a measurement for example)." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Repetitions" ;
                        ns1:path <http://schema.org/repetitions> ;
                        ns1:xone ( [ ns1:datatype xsd:integer ] [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] ) ] ] ) .

<https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> a ns1:NodeShape ;
    ns1:property [ ns1:description "The value of the quantitative value or property value node." ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Value" ;
            ns1:or ( [ ns1:datatype xsd:float ] [ ns1:datatype xsd:decimal ] [ ns1:datatype xsd:double ] [ ns1:datatype xsd:int ] [ ns1:datatype xsd:long ] [ ns1:datatype xsd:unsignedInt ] [ ns1:datatype xsd:unsignedLong ] [ ns1:datatype xsd:integer ] ) ;
            ns1:path <http://schema.org/value> ],
        <https://neuroshapes.org/commons/unit/shapes/WithUnitCodeShape> .

