@prefix ns1: <http://www.w3.org/ns/prov#> .
@prefix ns2: <http://www.w3.org/ns/shacl#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/collection> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/commons/entity>,
        <https://provshapes.org/commons/collection> ;
    ns1:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/collection/v0.2.0.json" ;
    ns3:shapes <https://neuroshapes.org/commons/collection/shapes/CollectionShape> .

<https://neuroshapes.org/commons/collection/shapes/CollectionShape> a ns2:NodeShape ;
    rdfs:label "A collection shape."^^xsd:string ;
    ns2:and ( [ ns2:node <https://provshapes.org/commons/collection/shapes/CollectionShape> ] [ ns2:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns2:property [ ns2:datatype xsd:integer ;
                        ns2:description "Collection size. The collection can be empty with size 0." ;
                        ns2:maxCount 1 ;
                        ns2:minInclusive 0 ;
                        ns2:name "Size" ;
                        ns2:path <http://schema.org/size> ] ] ) ;
    ns2:nodeKind ns2:BlankNodeOrIRI .

