@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/identifier> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/commons/propertyvalue> ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/identifier/v0.2.1.json" ;
    ns3:shapes <https://neuroshapes.org/commons/identifier/shapes/IdentifierShape>,
        <https://neuroshapes.org/commons/identifier/shapes/WithGridIdentifierPropertyShape>,
        <https://neuroshapes.org/commons/identifier/shapes/WithOrcidIdentifierPropertyShape>,
        <https://neuroshapes.org/commons/identifier/shapes/WithStructuredIdentifierShape> .

<https://neuroshapes.org/commons/identifier/shapes/IdentifierShape> a ns1:NodeShape ;
    ns1:property <https://neuroshapes.org/commons/identifier/shapes/WithIdentifierPropertyShape> .

<https://neuroshapes.org/commons/identifier/shapes/WithGridIdentifierPropertyShape> a ns1:PropertyShape ;
    rdfs:label "A shape for GRID (https://www.grid.ac) based organization identifier."^^xsd:string ;
    rdfs:seeAlso <https://www.grid.ac> ;
    ns1:path <http://schema.org/identifier> ;
    ns1:pattern "^(https://www.grid.ac)" .

<https://neuroshapes.org/commons/identifier/shapes/WithIdentifierPropertyShape> ns1:description "The identifier property represents any kind of identifier for any kind of Thing, such as ISBNs, GTIN codes, UUIDs." ;
    ns1:name "Identifier" ;
    ns1:path <http://schema.org/identifier> ;
    ns1:xone ( [ ns1:nodeKind ns1:IRI ] [ ns1:datatype xsd:string ] [ ns1:node <https://neuroshapes.org/commons/propertyvalue/shapes/PropertyValueShape> ] ) .

<https://neuroshapes.org/commons/identifier/shapes/WithOrcidIdentifierPropertyShape> a ns1:PropertyShape ;
    rdfs:label "A shape for an ORCID based researcher identifier."^^xsd:string ;
    rdfs:seeAlso <https://support.orcid.org/knowledgebase/articles/116780-structure-of-the-orcid-identifier> ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/propertyvalue/shapes/PropertyValueShape> ] [ ns1:or ( [ ns1:property [ ns1:datatype xsd:string ;
                                    ns1:description "The property name." ;
                                    ns1:hasValue "http//orcid.org" ;
                                    ns1:maxCount 1 ;
                                    ns1:name "Orcid ID" ;
                                    ns1:path <http://schema.org/propertyID> ] ] [ ns1:property [ ns1:datatype xsd:string ;
                                    ns1:description "The property name." ;
                                    ns1:hasValue "orcid" ;
                                    ns1:maxCount 1 ;
                                    ns1:name "Orcid ID" ;
                                    ns1:path <http://schema.org/name> ] ] ) ] [ ns1:property [ ns1:description "The orcid identifier" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Orcid" ;
                        ns1:nodeKind ns1:IRI ;
                        ns1:path <http://schema.org/value> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:path <http://schema.org/identifier> .

<https://neuroshapes.org/commons/identifier/shapes/WithStructuredIdentifierShape> a ns1:PropertyShape ;
    rdfs:label "Key value type of identifier."^^xsd:string ;
    ns1:node <https://neuroshapes.org/commons/propertyvalue/shapes/PropertyValueShape> ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:path <http://schema.org/identifier> .

