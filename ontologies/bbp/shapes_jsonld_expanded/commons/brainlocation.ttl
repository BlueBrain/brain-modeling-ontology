@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/commons/brainlocation> a ns2:Schema ;
    rdfs:label "Brain Location Schema"^^xsd:string ;
    owl:imports <https://neuroshapes.org/commons/quantitativevalue>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm>,
        <https://neuroshapes.org/commons/vector3d> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/commons/src/main/resources/schemas/neurosciencegraph/commons/brainlocation/v0.1.1.json" ;
    ns2:shapes <https://neuroshapes.org/commons/brainlocation/shapes/BrainLocationShape>,
        <https://neuroshapes.org/commons/brainlocation/shapes/CoordinatesInBrainAtlasShape>,
        <https://neuroshapes.org/commons/brainlocation/shapes/CoordinatesInSliceShape>,
        <https://neuroshapes.org/commons/brainlocation/shapes/DistanceToBoundaryShape> .

<https://neuroshapes.org/commons/brainlocation/shapes/BrainLocationShape> a ns1:NodeShape ;
    rdfs:label "Brain location shape definition"^^xsd:string ;
    ns1:property [ ns1:description "Position in layer (deep / superficial)" ;
            ns1:in ( "Deep" "Superficial" ) ;
            ns1:maxCount 1 ;
            ns1:name "Position in layer" ;
            ns1:path <https://neuroshapes.org/positionInLayer> ],
        [ ns1:description "Brain region" ;
            ns1:minCount 1 ;
            ns1:name "Brain region" ;
            ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/BrainRegionOntologyTermShape> ;
            ns1:path <https://neuroshapes.org/brainRegion> ],
        [ ns1:description "Brain region region (e.g. layer of the neocortex)" ;
            ns1:name "Brain region layer" ;
            ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/BrainRegionOntologyTermShape> ;
            ns1:path <https://neuroshapes.org/layer> ],
        [ ns1:description "Coordinates in slice" ;
            ns1:maxCount 1 ;
            ns1:name "Coordinates in slice" ;
            ns1:node <https://neuroshapes.org/commons/brainlocation/shapes/CoordinatesInSliceShape> ;
            ns1:path <https://neuroshapes.org/coordinatesInSlice> ],
        [ ns1:in ( "Dorsal" "Ventral" ) ;
            ns1:maxCount 1 ;
            ns1:name "Longitudinal axis (dorsal / ventral)" ;
            ns1:path <https://neuroshapes.org/longitudinalAxis> ],
        [ ns1:description "Distance to boundary" ;
            ns1:maxCount 1 ;
            ns1:name "Distance to boundary" ;
            ns1:node <https://neuroshapes.org/commons/brainlocation/shapes/DistanceToBoundaryShape> ;
            ns1:path <https://neuroshapes.org/distanceToBoundary> ],
        [ ns1:description "Coordinates in brain atlas" ;
            ns1:maxCount 1 ;
            ns1:name "Coordinates in brain atlas" ;
            ns1:node <https://neuroshapes.org/commons/brainlocation/shapes/CoordinatesInBrainAtlasShape> ;
            ns1:path <https://neuroshapes.org/coordinatesInBrainAtlas> ],
        [ ns1:class <https://neuroshapes.org/AtlasSpatialReferenceSystem> ;
            ns1:maxCount 1 ;
            ns1:name "Atlas Spatial Reference System" ;
            ns1:path <https://neuroshapes.org/atlasSpatialReferenceSystem> ] .

<https://neuroshapes.org/commons/brainlocation/shapes/CoordinatesInBrainAtlasShape> a ns1:NodeShape ;
    rdfs:label "Coordinates in brain atlas shape definition"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/vector3d/shapes/Vector3DShape> ] ),
        ( [ ns1:node <https://neuroshapes.org/commons/vector3d/shapes/Vector3DShape> ] ) .

<https://neuroshapes.org/commons/brainlocation/shapes/CoordinatesInSliceShape> a ns1:NodeShape ;
    rdfs:label "Coordinates in slice shape definition"^^xsd:string ;
    ns1:property [ ns1:datatype xsd:float ;
            ns1:description "Vector value of Y" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Y value" ;
            ns1:path <https://neuroshapes.org/valueY> ],
        [ ns1:datatype xsd:float ;
            ns1:description "Vector value of Z" ;
            ns1:maxCount 1 ;
            ns1:name "Z value" ;
            ns1:path <https://neuroshapes.org/valueZ> ],
        [ ns1:datatype xsd:float ;
            ns1:description "Vector value of Z" ;
            ns1:maxCount 1 ;
            ns1:name "Z value" ;
            ns1:path <https://neuroshapes.org/valueZ> ],
        [ ns1:datatype xsd:float ;
            ns1:description "Vector value of X" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "X value" ;
            ns1:path <https://neuroshapes.org/valueX> ],
        [ ns1:class <https://neuroshapes.org/SpatialReferenceSystem> ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Spatial Reference System" ;
            ns1:path <https://neuroshapes.org/spatialReferenceSystem> ],
        [ ns1:datatype xsd:float ;
            ns1:description "Vector value of X" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "X value" ;
            ns1:path <https://neuroshapes.org/valueX> ],
        [ ns1:class <https://neuroshapes.org/SpatialReferenceSystem> ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Spatial Reference System" ;
            ns1:path <https://neuroshapes.org/spatialReferenceSystem> ],
        [ ns1:datatype xsd:float ;
            ns1:description "Vector value of Y" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Y value" ;
            ns1:path <https://neuroshapes.org/valueY> ] .

<https://neuroshapes.org/commons/brainlocation/shapes/DistanceToBoundaryShape> a ns1:NodeShape ;
    rdfs:label "Distance to boundary shape definition"^^xsd:string ;
    ns1:property [ ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Boundary" ;
            ns1:node <https://neuroshapes.org/commons/labeledontologyentity/shapes/LabeledOntologyEntityShape> ;
            ns1:path <https://neuroshapes.org/boundary> ],
        [ ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Boundary" ;
            ns1:node <https://neuroshapes.org/commons/labeledontologyentity/shapes/LabeledOntologyEntityShape> ;
            ns1:path <https://neuroshapes.org/boundary> ],
        [ ns1:description "Distance" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Distance" ;
            ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
            ns1:path <http://schema.org/distance> ],
        [ ns1:description "Distance" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Distance" ;
            ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
            ns1:path <http://schema.org/distance> ] .

