@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/imagevolume> a ns3:Schema ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/atlas/src/main/resources/schemas/neurosciencegraph/atlas/imagevolume/v1.0.0.json" ;
    ns3:shapes <https://neuroshapes.org/dash/imagevolume/shapes/ImageVolumeShape>,
        <https://neuroshapes.org/dash/imagevolume/shapes/VoxelResolutionShape> .

<https://neuroshapes.org/dash/imagevolume/shapes/ImageVolumeShape> a ns1:NodeShape ;
    rdfs:label "Image volume"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/transformableobject/shapes/EntityShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:description "Type of the voxel" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Volume type" ;
                        ns1:path <https://neuroshapes.org/voxelType> ],
                    [ ns1:description "Origin of the image volume" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Image Origin" ;
                        ns1:node <https://neuroshapes.org/commons/vector3d/shapes/Vector3DShape> ;
                        ns1:path <https://neuroshapes.org/imageOrigin> ],
                    [ ns1:description "Dimension of the 3D volume in voxel" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Volume Dimension" ;
                        ns1:node <https://neuroshapes.org/commons/vector3d/shapes/Vector3DShape> ;
                        ns1:path <https://neuroshapes.org/volumeDimension> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Modality of the image stack" ;
                        ns1:maxCount 1 ;
                        ns1:name "Image modality" ;
                        ns1:path <https://neuroshapes.org/imageModality> ],
                    [ ns1:description "Direction of the image volume represented as a rotational matrix" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Image direction" ;
                        ns1:node <https://neuroshapes.org/commons/vector3d/shapes/RotationalMatrixShape> ;
                        ns1:path <https://neuroshapes.org/imageDirection> ],
                    [ ns1:description "Resolution of the voxel" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Voxel resolution" ;
                        ns1:node <https://neuroshapes.org/dash/imagevolume/shapes/VoxelResolutionShape> ;
                        ns1:path <https://neuroshapes.org/voxelResolution> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/ImageVolume> .

<https://neuroshapes.org/dash/imagevolume/shapes/VoxelResolutionShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] [ ns1:property [ ns1:description "Voxel resolution value" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Voxel resolution value" ;
                        ns1:node <https://neuroshapes.org/commons/vector3d/shapes/Vector3DShape> ;
                        ns1:path <http://schema.org/value> ] ] ) ;
    ns1:targetObjectsOf <https://neuroshapes.org/voxelResolution> .

