@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/reconstructedpatchedcell> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/dash/reconstructedcell> ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/morphology/src/main/resources/schemas/neurosciencegraph/morphology/reconstructedpatchedcell/v0.1.1.json" ;
    ns3:shapes <https://neuroshapes.org/dash/reconstructedpatchedcell/shapes/NeuronMorphologyQualityShape>,
        <https://neuroshapes.org/dash/reconstructedpatchedcell/shapes/ReconstructedPatchedCellShape> .

<https://neuroshapes.org/dash/reconstructedpatchedcell/shapes/ReconstructedPatchedCellShape> a ns1:NodeShape ;
    rdfs:label "Reconstructed cell shape definition"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/dash/reconstructedcell/shapes/ReconstructedCellShape> ] [ ns1:property [ ns1:description "Gives information on the quality of the reconstructed cell." ;
                        ns1:maxCount 1 ;
                        ns1:name "Reconstructed cell quality" ;
                        ns1:node <https://neuroshapes.org/dash/reconstructedpatchedcell/shapes/NeuronMorphologyQualityShape> ;
                        ns1:path <https://neuroshapes.org/quality> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/ReconstructedCell>,
        <https://neuroshapes.org/ReconstructedNeuronMorphology>,
        <https://neuroshapes.org/ReconstructedPatchedCell> .

<https://neuroshapes.org/dash/reconstructedpatchedcell/shapes/NeuronMorphologyQualityShape> a ns1:NodeShape ;
    ns1:property [ ns1:datatype xsd:boolean ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Apical dendrite integrity" ;
            ns1:path <https://neuroshapes.org/hasApicalDendrite> ],
        [ ns1:datatype xsd:boolean ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Soma integrity" ;
            ns1:path <https://neuroshapes.org/hasSoma> ],
        [ ns1:datatype xsd:boolean ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Axon integrity" ;
            ns1:path <https://neuroshapes.org/hasAxon> ],
        [ ns1:datatype xsd:boolean ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Basal dendrite integrity" ;
            ns1:path <https://neuroshapes.org/hasBasalDendrite> ] .

