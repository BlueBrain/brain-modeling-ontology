@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/reconstructedcell> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/commons/brainlocation>,
        <https://neuroshapes.org/commons/transformableobject>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/morphology/src/main/resources/schemas/neurosciencegraph/morphology/reconstructedcell/v0.1.2.json" ;
    ns3:shapes <https://neuroshapes.org/dash/reconstructedcell/shapes/ReconstructedCellShape> .

<https://neuroshapes.org/dash/reconstructedcell/shapes/ReconstructedCellShape> a ns1:NodeShape ;
    rdfs:label "Reconstructed cell shape definition"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/transformableobject/shapes/TransformableObjectShape> ] [ ns1:property [ ns1:description "Gives information on the type of soma of the reconstructed cell, values can be 3D or 2D contour, 1 point, 3 point." ;
                        ns1:name "Soma reconstruction type" ;
                        ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/SomaTypeTermShape> ;
                        ns1:path <https://neuroshapes.org/somaReconstructionType> ],
                    [ ns1:description "Axon projection of the reconstructed cell." ;
                        ns1:name "Axon projection" ;
                        ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/BrainRegionOntologyTermShape> ;
                        ns1:path <https://neuroshapes.org/axonProjection> ],
                    [ ns1:description "The morphology type of the reconstructed cell." ;
                        ns1:maxCount 1 ;
                        ns1:name "Morphology type" ;
                        ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/CellTypeOntologyTermShape> ;
                        ns1:path <https://neuroshapes.org/mType> ],
                    [ ns1:description "Brain Location (brain region, position In Layer, longitudinalAxis) of the reconstructed cell soma." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Soma brain location" ;
                        ns1:node <https://neuroshapes.org/commons/brainlocation/shapes/BrainLocationShape> ;
                        ns1:path <https://neuroshapes.org/brainLocation> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/ReconstructedCell>,
        <https://neuroshapes.org/ReconstructedNeuronMorphology> .

