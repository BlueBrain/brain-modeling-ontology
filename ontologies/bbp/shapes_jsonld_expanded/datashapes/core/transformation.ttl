@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/transformation> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/activity> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/atlas/src/main/resources/schemas/neurosciencegraph/atlas/transformation/v0.1.0.json" ;
    ns2:shapes <https://neuroshapes.org/dash/transformation/shapes/TransformationShape> .

<https://neuroshapes.org/dash/transformation/shapes/TransformationShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/activity/shapes/ActivityShape> ] [ ns1:property [ ns1:description "A transformable object (an image or a reconstructed cell) used to be transformed." ;
                        ns1:name "Transformable object" ;
                        ns1:path ns3:used ;
                        ns1:qualifiedMaxCount 1 ;
                        ns1:qualifiedMinCount 1 ;
                        ns1:qualifiedValueShape [ ns1:class <https://neuroshapes.org/TransformableObject> ] ;
                        ns1:qualifiedValueShapesDisjoint true ],
                    [ ns1:minCount 2 ;
                        ns1:path ns3:used ],
                    [ ns1:description "Transform used." ;
                        ns1:name "Transform" ;
                        ns1:path ns3:used ;
                        ns1:qualifiedMaxCount 1 ;
                        ns1:qualifiedMinCount 1 ;
                        ns1:qualifiedValueShape [ ns1:class <https://neuroshapes.org/Transform> ] ;
                        ns1:qualifiedValueShapesDisjoint true ],
                    [ ns1:class <https://neuroshapes.org/TransformableObject> ;
                        ns1:description "A transformed object, which should be the same type of the input object" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:path ns3:generated ] ] ) ;
    ns1:description "Transformation activity shape description." ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/Transformation> .

