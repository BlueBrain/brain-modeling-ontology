@prefix ns1: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns2: <http://www.w3.org/ns/shacl#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/recordseries> a ns1:Schema ;
    owl:imports <https://neuroshapes.org/commons/entity> ;
    ns1:shapes <https://neuroshapes.org/dash/recordseries/shapes/RecordMeasureShape>,
        <https://neuroshapes.org/dash/recordseries/shapes/RecordSeriesShape> .

<https://neuroshapes.org/dash/recordseries/shapes/RecordMeasureShape> a ns2:NodeShape ;
    rdfs:label "Record Measure Shape"^^xsd:string ;
    ns2:description "A measure can be anything" ;
    ns2:property [ ns2:description "Type of the value" ;
            ns2:in ( "ascii" "uint8" "int8" "uint16" "int16" "uint32" "int32" "uint64" "int64" "float16" "float32" "float64" ) ;
            ns2:maxCount 1 ;
            ns2:minCount 1 ;
            ns2:name "Data Type" ;
            ns2:path <https://neuroshapes.org/componentEncoding> ],
        [ ns2:datatype xsd:string ;
            ns2:description "Name of the measure" ;
            ns2:maxCount 1 ;
            ns2:minCount 1 ;
            ns2:name "Name" ;
            ns2:path <http://schema.org/name> ],
        [ ns2:datatype xsd:string ;
            ns2:description "Description of what this measure is about" ;
            ns2:maxCount 1 ;
            ns2:name "Description" ;
            ns2:path <http://schema.org/description> ] ;
    ns2:targetClass <https://neuroshapes.org/RecordMeasure> .

<https://neuroshapes.org/dash/recordseries/shapes/RecordSeriesShape> a ns2:NodeShape ;
    rdfs:label "Record Series"^^xsd:string ;
    ns2:and ( [ ns2:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns2:property [ ns2:description "Encoding used for the whole series, once uncompressed if any compression method was used." ;
                        ns2:in ( "ascii" "binary" ) ;
                        ns2:maxCount 1 ;
                        ns2:minCount 1 ;
                        ns2:name "Buffer Encoding" ;
                        ns2:path <https://neuroshapes.org/bufferEncoding> ],
                    [ ns2:datatype xsd:long ;
                        ns2:description "Number of record in this series" ;
                        ns2:minCount 1 ;
                        ns2:name "Number Of Records" ;
                        ns2:path <https://neuroshapes.org/numberOfRecords> ],
                    [ ns2:description "Endianness of the encoding, not applicable if buffer encoding is ascii" ;
                        ns2:in ( "little" "big" ) ;
                        ns2:maxCount 1 ;
                        ns2:name "Endianness" ;
                        ns2:path <https://neuroshapes.org/endianness> ],
                    [ ns2:datatype xsd:long ;
                        ns2:description "Number of byte at the beginning of the file/buffer before the first measure or the first record. Mostly relevant for binary buffers as CSV would usually contain a header." ;
                        ns2:name "Byte Offset" ;
                        ns2:path <https://neuroshapes.org/byteOffset> ],
                    [ ns2:description "List of measures performed or computed on a system" ;
                        ns2:minCount 1 ;
                        ns2:name "Record Measure" ;
                        ns2:path <https://neuroshapes.org/recordMeasure> ] ] ) ;
    ns2:description "Definition of a series of records, each record having measures. Files types for this purpose are usually CSV, TSV or binary buffers" ;
    ns2:nodeKind ns2:BlankNodeOrIRI ;
    ns2:targetClass <https://neuroshapes.org/RecordSeries> .

