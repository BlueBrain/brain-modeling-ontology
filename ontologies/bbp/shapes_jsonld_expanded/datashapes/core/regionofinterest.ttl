@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/regionofinterest> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/entity>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/atlas/src/main/resources/schemas/neurosciencegraph/atlas/regionofinterest/v1.0.0.json" ;
    ns2:shapes <https://neuroshapes.org/dash/regionofinterest/shapes/BrainLocationShape>,
        <https://neuroshapes.org/dash/regionofinterest/shapes/GeometricShapeShape>,
        <https://neuroshapes.org/dash/regionofinterest/shapes/GeometryParameterShape>,
        <https://neuroshapes.org/dash/regionofinterest/shapes/RegionOfInterestShape> .

<https://neuroshapes.org/dash/regionofinterest/shapes/RegionOfInterestShape> a ns1:NodeShape ;
    rdfs:label "Region of interest."^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns1:property [ ns1:description "The geometric shape of the region of interest." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Geometry" ;
                        ns1:node <https://neuroshapes.org/dash/regionofinterest/shapes/GeometricShapeShape> ;
                        ns1:path <https://neuroshapes.org/geometry> ],
                    [ ns1:description "The location of the region of interest." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Location" ;
                        ns1:node <https://neuroshapes.org/dash/regionofinterest/shapes/BrainLocationShape> ;
                        ns1:path <https://neuroshapes.org/location> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/RegionOfInterest> .

<https://neuroshapes.org/dash/regionofinterest/shapes/BrainLocationShape> a ns1:NodeShape ;
    rdfs:label "A brain location shape."^^xsd:string ;
    ns1:property [ ns1:description "Brain region" ;
            ns1:minCount 1 ;
            ns1:name "Brain region" ;
            ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/BrainRegionOntologyTermShape> ;
            ns1:path <https://neuroshapes.org/brainRegion> ] .

<https://neuroshapes.org/dash/regionofinterest/shapes/GeometricShapeShape> a ns1:NodeShape ;
    rdfs:label "The shape of a  geometry node."^^xsd:string ;
    ns1:class <https://neuroshapes.org/GeometricShape> ;
    ns1:property [ ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Parameters" ;
            ns1:node <https://neuroshapes.org/dash/regionofinterest/shapes/GeometryParameterShape> ;
            ns1:path <https://neuroshapes.org/geometryParameter> ] ;
    ns1:targetObjectsOf <https://neuroshapes.org/geometry> .

<https://neuroshapes.org/dash/regionofinterest/shapes/GeometryParameterShape> a ns1:NodeShape ;
    rdfs:label "The shape of a geometry parameter."^^xsd:string ;
    ns1:property [ ns1:class <https://neuroshapes.org/SpatialReferenceSystem> ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Spatial Reference System" ;
            ns1:path <https://neuroshapes.org/spatialReferenceSystem> ] ;
    ns1:targetObjectsOf <https://neuroshapes.org/geometryParameter> .

