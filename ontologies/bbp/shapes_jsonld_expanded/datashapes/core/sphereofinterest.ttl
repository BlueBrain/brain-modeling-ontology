@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/sphereofinterest> a ns2:Schema ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/atlas/src/main/resources/schemas/neurosciencegraph/atlas/sphereofinterest/v0.1.0.json" ;
    ns2:shapes <https://neuroshapes.org/dash/sphereofinterest/shapes/SphereGeometricShapeShape>,
        <https://neuroshapes.org/dash/sphereofinterest/shapes/SphereGeometryParameterShape>,
        <https://neuroshapes.org/dash/sphereofinterest/shapes/SphereOfInterestShape> .

<https://neuroshapes.org/dash/sphereofinterest/shapes/SphereOfInterestShape> a ns1:NodeShape ;
    rdfs:label "A region of interest with sphere as a geometric shape."^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/dash/regionofinterest/shapes/RegionOfInterestShape> ] [ ns1:property [ ns1:description "The geometric shape of the sphere of interest." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:node <https://neuroshapes.org/dash/sphereofinterest/shapes/SphereGeometricShapeShape> ;
                        ns1:path <https://neuroshapes.org/geometry> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/RegionOfInterest> .

<https://neuroshapes.org/dash/sphereofinterest/shapes/SphereGeometricShapeShape> a ns1:NodeShape ;
    rdfs:label "The shape of a  sphere geometry."^^xsd:string ;
    ns1:class <https://neuroshapes.org/Sphere> ;
    ns1:property [ ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Parameters" ;
            ns1:node <https://neuroshapes.org/dash/sphereofinterest/shapes/SphereGeometryParameterShape> ;
            ns1:path <https://neuroshapes.org/geometryParameter> ] ;
    ns1:targetObjectsOf <https://neuroshapes.org/geometry> .

<https://neuroshapes.org/dash/sphereofinterest/shapes/SphereGeometryParameterShape> a ns1:NodeShape ;
    rdfs:label "The shape of sphere geometry parameters."^^xsd:string ;
    ns1:property [ ns1:description "The sphere center coordinates" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Center" ;
            ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
            ns1:path <https://neuroshapes.org/center> ],
        [ ns1:description "The sphere radius" ;
            ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Radius" ;
            ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
            ns1:path <https://neuroshapes.org/radius> ] ;
    ns1:targetObjectsOf <https://neuroshapes.org/geometryParameter> .

