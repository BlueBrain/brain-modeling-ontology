@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/labeledcell> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/brainlocation>,
        <https://neuroshapes.org/commons/entity>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/morphology/src/main/resources/schemas/neurosciencegraph/morphology/labeledcell/v0.2.0.json" ;
    ns2:shapes <https://neuroshapes.org/dash/labeledcell/shapes/LabeledCellShape> .

<https://neuroshapes.org/dash/labeledcell/shapes/LabeledCellShape> a ns1:NodeShape ;
    rdfs:comment "Labeled cell shape definition"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns1:property [ ns1:description "Specifies the coordinates of the location of the cell in the slice" ;
                        ns1:maxCount 1 ;
                        ns1:name "Coordinates of location in slice" ;
                        ns1:node <https://neuroshapes.org/commons/vector3d/shapes/Vector3DShape> ;
                        ns1:path <https://neuroshapes.org/locationInSlice> ],
                    [ ns1:description "Brain location" ;
                        ns1:maxCount 1 ;
                        ns1:name "Brain location of the labeled cell." ;
                        ns1:node <https://neuroshapes.org/commons/brainlocation/shapes/BrainLocationShape> ;
                        ns1:path <https://neuroshapes.org/brainLocation> ],
                    [ ns1:datatype xsd:boolean ;
                        ns1:description "Indicates if reconstruction the cell has been requested or not" ;
                        ns1:maxCount 1 ;
                        ns1:name "Reconstruction requested" ;
                        ns1:path <https://neuroshapes.org/reconstructionRequested> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Spatial cell name given during the annotation process." ;
                        ns1:maxCount 1 ;
                        ns1:name "Spatial cell name" ;
                        ns1:path <https://neuroshapes.org/spatialCellName> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Indicates if the cell can be reconstructed or not" ;
                        ns1:maxCount 1 ;
                        ns1:name "Reconstructable" ;
                        ns1:path <https://neuroshapes.org/reconstructable> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Project name" ;
                        ns1:maxCount 1 ;
                        ns1:name "Project name for data produced within the context of a project" ;
                        ns1:path <https://neuroshapes.org/projectName> ],
                    [ ns1:description "Indicates the putative morphology type of the labeled cell." ;
                        ns1:maxCount 1 ;
                        ns1:name "Putative morphology type" ;
                        ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/CellTypeOntologyTermShape> ;
                        ns1:path <https://neuroshapes.org/putativeMType> ],
                    [ ns1:class <https://neuroshapes.org/PatchedCell> ;
                        ns1:description "The patched cell this labeled cell is a revision of" ;
                        ns1:maxCount 1 ;
                        ns1:name "Patched cell" ;
                        ns1:path ns3:wasRevisionOf ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/LabeledCell> .

