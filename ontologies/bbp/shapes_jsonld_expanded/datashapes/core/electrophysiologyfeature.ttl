@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/electrophysiologyfeature> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/entity>,
        <https://neuroshapes.org/commons/labeledontologyentity>,
        <https://neuroshapes.org/commons/quantitativevalue>,
        <https://neuroshapes.org/commons/subject> ;
    ns2:shapes <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/ElectrophysiologyFeatureShape>,
        <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/FeatureShape>,
        <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/SeriesShape>,
        <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/StimulusShape> .

<https://neuroshapes.org/dash/electrophysiologyfeature/shapes/ElectrophysiologyFeatureShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns1:property [ ns1:description "Electrophysiology feature" ;
                        ns1:name "Feature" ;
                        ns1:node <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/FeatureShape> ;
                        ns1:path <https://neuroshapes.org/feature> ],
                    [ ns1:description "The shape of the stimulus" ;
                        ns1:name "Stimulus" ;
                        ns1:node <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/StimulusShape> ;
                        ns1:path <https://neuroshapes.org/stimulus> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "The e-model" ;
                        ns1:name "E-model" ;
                        ns1:path <https://neuroshapes.org/eModel> ],
                    [ ns1:class <https://neuroshapes.org/Subject> ;
                        ns1:description "The subject information (e.g. species)." ;
                        ns1:name "Subject" ;
                        ns1:path <https://neuroshapes.org/subject> ] ] ) ;
    ns1:nodeKind ns1:IRI ;
    ns1:targetClass <https://neuroshapes.org/ElectrophysiologyFeature> .

<https://neuroshapes.org/dash/electrophysiologyfeature/shapes/FeatureShape> a ns1:NodeShape ;
    rdfs:label "Feature shape definition"^^xsd:string ;
    ns1:property [ ns1:name "Feature value" ;
            ns1:path <http://schema.org/value> ],
        [ ns1:description "Feature name" ;
            ns1:name "Feature name" ;
            ns1:path <http://schema.org/name> ],
        [ ns1:name "Feature series" ;
            ns1:node <https://neuroshapes.org/dash/electrophysiologyfeature/shapes/SeriesShape> ;
            ns1:path <https://neuroshapes.org/series> ] .

<https://neuroshapes.org/dash/electrophysiologyfeature/shapes/SeriesShape> a ns1:NodeShape ;
    rdfs:label "Series shape definition"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:name "Statistic" ;
                        ns1:path <https://neuroshapes.org/statistic> ] ] ) .

<https://neuroshapes.org/dash/electrophysiologyfeature/shapes/StimulusShape> a ns1:NodeShape ;
    rdfs:label "Stimulus shape definition"^^xsd:string ;
    ns1:property [ ns1:name "Stimulus target" ;
            ns1:path <https://neuroshapes.org/stimulusTarget> ],
        [ ns1:maxCount 1 ;
            ns1:name "Stimulus type" ;
            ns1:node <https://neuroshapes.org/commons/labeledontologyentity/shapes/LabeledOntologyEntityShape> ;
            ns1:path <https://neuroshapes.org/stimulusType> ],
        [ ns1:datatype xsd:string ;
            ns1:maxCount 1 ;
            ns1:path <https://neuroshapes.org/recordingLocation> ] .

