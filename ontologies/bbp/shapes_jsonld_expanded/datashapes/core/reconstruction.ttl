@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/reconstruction> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/activity>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/morphology/src/main/resources/schemas/neurosciencegraph/morphology/reconstruction/v0.1.1.json" ;
    ns2:shapes <https://neuroshapes.org/dash/reconstruction/shapes/ReconstructionShape> .

<https://neuroshapes.org/dash/reconstruction/shapes/ReconstructionShape> a ns1:NodeShape ;
    rdfs:label "Reconstruction activities description."^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/activity/shapes/ActivityShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:description "Objective magnification ." ;
                        ns1:maxCount 1 ;
                        ns1:name "Objective magnification" ;
                        ns1:path <https://neuroshapes.org/objectiveMagnification> ],
                    [ ns1:class <https://neuroshapes.org/ReconstructedCell> ;
                        ns1:description "The reconstructed cell generated" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:path ns3:generated ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Reconstruction compression corrected refers to the correction applied to the cell reconstruction, expected value : x1.25 in Z." ;
                        ns1:maxCount 1 ;
                        ns1:name "Reconstruction compression correction" ;
                        ns1:path <https://neuroshapes.org/compressionCorrection> ],
                    [ ns1:class <https://neuroshapes.org/LabeledCell> ;
                        ns1:description "The labeled cell used for the reconstruction activity" ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:path ns3:used ],
                    [ ns1:description "Type of objective that was used for the reconstruction such as dry, oil or water." ;
                        ns1:maxCount 1 ;
                        ns1:name "Objective type" ;
                        ns1:node <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/ObjectiveTypeOntologyTermShape> ;
                        ns1:path <https://neuroshapes.org/objectiveType> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/NeuronMorphologyReconstruction>,
        <https://neuroshapes.org/Reconstruction> .

