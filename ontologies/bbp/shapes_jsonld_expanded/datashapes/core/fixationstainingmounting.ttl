@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix ns3: <http://www.w3.org/ns/prov#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/fixationstainingmounting> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/activity> ;
    ns3:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/morphology/src/main/resources/schemas/neurosciencegraph/morphology/fixationstainingmounting/v1.0.0.json" ;
    ns2:shapes <https://neuroshapes.org/dash/fixationstainingmounting/shapes/FixationStainingMountingShape> .

<https://neuroshapes.org/dash/fixationstainingmounting/shapes/FixationStainingMountingShape> a ns1:NodeShape ;
    rdfs:label "Fixing, Staining and Mounting activities description"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/activity/shapes/ActivityShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:description "Stain used for the detection of the cell labeling compound such as the chromogen DAB." ;
                        ns1:maxCount 1 ;
                        ns1:name "Stain" ;
                        ns1:path <https://neuroshapes.org/stain> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Method used for the fixation of the slice after electrophysiology such as PFA." ;
                        ns1:maxCount 1 ;
                        ns1:name "Fixation method" ;
                        ns1:path <https://neuroshapes.org/fixationMethod> ],
                    [ rdfs:seeAlso <https://neuroshapes.org/dash/slicecollection/shapes/SliceCollectionShape> ;
                        ns1:class <https://neuroshapes.org/SliceCollection> ;
                        ns1:description "The collection of patched slices used" ;
                        ns1:minCount 1 ;
                        ns1:path ns3:used ],
                    [ rdfs:seeAlso <https://neuroshapes.org/dash/slicecollection/shapes/SliceCollectionShape> ;
                        ns1:class <https://neuroshapes.org/SliceCollection> ;
                        ns1:description "The collection of fixed and stained slices generated" ;
                        ns1:minCount 1 ;
                        ns1:path ns3:generated ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Mounting media is the medium that the sample is in while it is being imaged on the microscope such as Xylene or Mowiol." ;
                        ns1:maxCount 1 ;
                        ns1:name "Mounting Media" ;
                        ns1:path <https://neuroshapes.org/mountingMedia> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/FixationStainingMounting> .

