@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <http://www.w3.org/2004/02/skos/core#> .
@prefix ns4: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/detailedcircuit> a ns4:Schema ;
    owl:imports <https://neuroshapes.org/commons/modelinstance> ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/simulation/src/main/resources/schemas/neurosciencegraph/simulation/detailedcircuit/v0.1.2.json" ;
    ns4:shapes <https://neuroshapes.org/dash/detailedcircuit/shapes/DetailedCircuitShape> .

<https://neuroshapes.org/dash/detailedcircuit/shapes/DetailedCircuitShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/modelinstance/shapes/ModelInstanceShape> ] [ ns1:property [ rdfs:seeAlso <https://neuroshapes.org/dash/nodecollection/shapes/NodeCollectionShape> ;
                        ns1:class <https://neuroshapes.org/NodeCollection> ;
                        ns1:description "Node collection entity." ;
                        ns1:minCount 1 ;
                        ns1:name "Node collection" ;
                        ns1:path <https://neuroshapes.org/nodeCollection> ],
                    [ rdfs:seeAlso <https://neuroshapes.org/dash/target/shapes/TargetShape> ;
                        ns3:editorialNote "constrain with application/bbp-target"^^xsd:string ;
                        ns1:class <https://neuroshapes.org/Target> ;
                        ns1:description "Optional parameter giving location of predefined targets stored in the named file" ;
                        ns1:maxCount 1 ;
                        ns1:name "TargetFile" ;
                        ns1:path <https://neuroshapes.org/target> ],
                    [ rdfs:seeAlso <https://neuroshapes.org/dash/edgecollection/shapes/EdgeCollectionShape> ;
                        ns1:class <https://neuroshapes.org/EdgeCollection> ;
                        ns1:description "Location of nrn synapse file and additional circuit description files: start.ncs and start.target" ;
                        ns1:name "nrnPath" ;
                        ns1:path <https://neuroshapes.org/edgeCollection> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/DetailedCircuit> .

