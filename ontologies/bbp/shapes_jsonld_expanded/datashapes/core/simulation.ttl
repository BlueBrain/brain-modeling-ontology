@prefix ns1: <http://www.w3.org/ns/prov#> .
@prefix ns2: <http://www.w3.org/ns/shacl#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/simulation> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/commons/activity>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns1:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/simulation/src/main/resources/schemas/neurosciencegraph/simulation/simulation/v0.2.0.json" ;
    ns3:shapes <https://neuroshapes.org/dash/simulation/shapes/SimulationShape> .

<https://neuroshapes.org/dash/simulation/shapes/SimulationShape> a ns2:NodeShape ;
    rdfs:label "Model simulation activity shape"^^xsd:string ;
    rdfs:comment "Query: Get all simulation that generates a voltage trace layer 5"^^xsd:string ;
    ns2:and ( [ ns2:node <https://neuroshapes.org/commons/activity/shapes/ActivityShape> ] [ ns2:property [ rdfs:seeAlso <https://neuroshapes.org/dash/modelinstance/shapes/ModelInstanceShape> ;
                        ns2:description "Used model." ;
                        ns2:name "Model" ;
                        ns2:path ns1:used ;
                        ns2:qualifiedMaxCount 1 ;
                        ns2:qualifiedMinCount 1 ;
                        ns2:qualifiedValueShape [ ns2:class <https://neuroshapes.org/ModelInstance> ] ;
                        ns2:qualifiedValueShapesDisjoint true ],
                    [ rdfs:seeAlso <https://neuroshapes.org/commons/entity/shapes/EntityShape> ;
                        ns2:description "Used configuration." ;
                        ns2:name "Configuration" ;
                        ns2:path ns1:used ;
                        ns2:qualifiedMaxCount 1 ;
                        ns2:qualifiedMinCount 1 ;
                        ns2:qualifiedValueShape [ ns2:class <https://neuroshapes.org/Configuration> ] ;
                        ns2:qualifiedValueShapesDisjoint true ],
                    [ rdfs:seeAlso <https://neuroshapes.org/dash/variablereport/shapes/VariableReportShape> ;
                        ns2:class <https://neuroshapes.org/VariableReport> ;
                        ns2:description "Generated variable report (file attached (bbp, h5, nwb), variable name, target taken from (to be controlled) [compartment, soma, summation, extra cellular recording]))," ;
                        ns2:minCount 1 ;
                        ns2:name "Generated report" ;
                        ns2:path ns1:generated ],
                    [ rdfs:seeAlso <https://neuroshapes.org/commons/typedlabeledontologyterm/shapes/ModelSimulationStatusOntologyTermShape> ;
                        ns2:datatype <https://neuroshapes.org/SimulationStatus> ;
                        ns2:description "Simulation status." ;
                        ns2:minCount 1 ;
                        ns2:name "Status" ;
                        ns2:path <https://neuroshapes.org/status> ],
                    [ ns2:minCount 2 ;
                        ns2:path ns1:used ] ] ) ;
    ns2:targetClass <https://neuroshapes.org/Simulation> .

