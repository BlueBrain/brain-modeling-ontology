@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/thickness> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/brainlocation>,
        <https://neuroshapes.org/commons/entity>,
        <https://neuroshapes.org/commons/quantitativevalue> ;
    ns2:shapes <https://neuroshapes.org/dash/thickness/shapes/ThicknessQuantitativeValueShape>,
        <https://neuroshapes.org/dash/thickness/shapes/ThicknessShape> .

<https://neuroshapes.org/dash/thickness/shapes/ThicknessShape> a ns1:NodeShape ;
    rdfs:label "Thickness shape definition"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns1:property [ ns1:description "Brain location information of the thickness (e.g. specific cortical layer)." ;
                        ns1:name "Brain location" ;
                        ns1:node <https://neuroshapes.org/commons/brainlocation/shapes/BrainLocationShape> ;
                        ns1:path <https://neuroshapes.org/brainLocation> ],
                    [ ns1:description "Thickness of a neuroscience object such as a brain region layer." ;
                        ns1:minCount 1 ;
                        ns1:name "Thickness" ;
                        ns1:node <https://neuroshapes.org/dash/thickness/shapes/ThicknessQuantitativeValueShape> ;
                        ns1:path <https://neuroshapes.org/thickness> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/LayerThickness>,
        <https://neuroshapes.org/Thickness> .

<https://neuroshapes.org/dash/thickness/shapes/ThicknessQuantitativeValueShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:description "Statistic of the thickness (e.g. mean)." ;
                        ns1:name "Statistic" ;
                        ns1:path <https://neuroshapes.org/statistic> ] ] ) .

