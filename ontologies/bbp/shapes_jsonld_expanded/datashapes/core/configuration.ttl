@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <http://www.w3.org/ns/prov#> .
@prefix ns3: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/configuration> a ns3:Schema ;
    owl:imports <https://neuroshapes.org/commons/distribution>,
        <https://neuroshapes.org/commons/entity> ;
    ns2:wasDerivedFrom "https://github.com/INCF/neuroshapes/blob/v0.3.15/modules/simulation/src/main/resources/schemas/neurosciencegraph/simulation/configuration/v1.0.0.json" ;
    ns3:shapes <https://neuroshapes.org/dash/configuration/shapes/ConfigurationShape> .

<https://neuroshapes.org/dash/configuration/shapes/ConfigurationShape> a ns1:NodeShape ;
    rdfs:label "Configuration shape"^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns1:property [ ns1:description "Link to the configuration neurondb.xml file." ;
                        ns1:maxCount 1 ;
                        ns1:minCount 1 ;
                        ns1:name "Configuration file (s)" ;
                        ns1:node <https://neuroshapes.org/commons/distribution/shapes/DistributionShape> ;
                        ns1:path <http://schema.org/distribution> ] ] ) ;
    ns1:targetClass <https://neuroshapes.org/Configuration> .

