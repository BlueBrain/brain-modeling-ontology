@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/neuronmorphology> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/brainlocation>,
        <https://neuroshapes.org/commons/collection>,
        <https://neuroshapes.org/commons/minds>,
        <https://neuroshapes.org/commons/quantitativevalue>,
        <https://neuroshapes.org/commons/typedlabeledontologyterm> ;
    ns2:shapes <https://neuroshapes.org/dash/neuronmorphology/shapes/NeuriteFeature>,
        <https://neuroshapes.org/dash/neuronmorphology/shapes/NeuronMorphologyShape> .

<https://neuroshapes.org/dash/neuronmorphology/shapes/NeuronMorphologyShape> a ns1:NodeShape ;
    rdfs:label "Definition of a neuron morphology, whether it comes from a stack, a slice, was synthetized in-silico, is whole brain or local to a single brain region."^^xsd:string ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/minds/shapes/MINDSShape> ] [ ns1:property [ ns1:description "Unopinionated metrics relative to the neurites of this morphology" ;
                        ns1:name "Neurite features" ;
                        ns1:node <https://neuroshapes.org/dash/neuronmorphology/shapes/NeuriteFeature> ;
                        ns1:path <https://neuroshapes.org/neuriteFeature> ;
                        ns1:xone ( [ ns1:class <https://neuroshapes.org/Axon> ] [ ns1:class <https://neuroshapes.org/Dendrite> ] [ ns1:class <https://neuroshapes.org/BasalDendrite> ] [ ns1:class <https://neuroshapes.org/ApicalDendrite> ] ) ],
                    [ ns1:datatype xsd:int ;
                        ns1:description "Number of points involved in the modelisation of the soma" ;
                        ns1:maxCount 1 ;
                        ns1:name "Soma number of points" ;
                        ns1:path <https://neuroshapes.org/somaNumberOfPoints> ] ] ) ;
    ns1:nodeKind ns1:BlankNodeOrIRI ;
    ns1:targetClass <https://neuroshapes.org/NeuronMorphology> .

<https://neuroshapes.org/dash/neuronmorphology/shapes/NeuriteFeature> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/collection/shapes/CollectionShape> ] [ ns1:property [ ns1:description "Longest branch number of nodes of a neurite category" ;
                        ns1:name "Longest branch number of nodes" ;
                        ns1:path <https://neuroshapes.org/longestBranchNumberOfNodes> ],
                    [ ns1:description "Longest branch length of a neurite category" ;
                        ns1:name "Longest branch length" ;
                        ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
                        ns1:path <https://neuroshapes.org/longestBranchLength> ],
                    [ ns1:description "Total length of a neurite category" ;
                        ns1:maxCount 1 ;
                        ns1:name "Cumulated length" ;
                        ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
                        ns1:path <https://neuroshapes.org/cumulatedLength> ],
                    [ ns1:description "Number of projections of a neurite category" ;
                        ns1:name "Number of projections" ;
                        ns1:path <https://neuroshapes.org/numberOfProjections> ],
                    [ ns1:description "Brain regions being traversed by neurites of this category" ;
                        ns1:name "Traversed brain regions" ;
                        ns1:path <https://neuroshapes.org/traversedBrainRegion> ],
                    [ ns1:description "Brain regions where neurites of this category have their projection (i.e. where they terminate)" ;
                        ns1:name "Projection brain regions" ;
                        ns1:path <https://neuroshapes.org/projectionBrainRegion> ] ] ) .

