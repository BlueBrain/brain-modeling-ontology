@prefix ns1: <http://www.w3.org/ns/shacl#> .
@prefix ns2: <https://bluebrain.github.io/nexus/vocabulary/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://neuroshapes.org/dash/electrophysiologyfeaturetarget> a ns2:Schema ;
    owl:imports <https://neuroshapes.org/commons/entity>,
        <https://neuroshapes.org/commons/labeledontologyentity>,
        <https://neuroshapes.org/commons/quantitativevalue>,
        <https://neuroshapes.org/commons/subject> ;
    ns2:shapes <https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/ElectrophysiologyFeatureTargetShape> .

<https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/ElectrophysiologyFeatureTargetShape> a ns1:NodeShape ;
    ns1:and ( [ ns1:node <https://neuroshapes.org/commons/entity/shapes/EntityShape> ] [ ns1:property [ ns1:datatype xsd:string ;
                        ns1:description "The e-model" ;
                        ns1:name "E-model" ;
                        ns1:path <https://neuroshapes.org/eModel> ],
                    [ ns1:class <https://neuroshapes.org/Subject> ;
                        ns1:description "The subject information (e.g. species)." ;
                        ns1:name "Subject" ;
                        ns1:path <https://neuroshapes.org/subject> ],
                    [ ns1:description "Electrophysiology feature" ;
                        ns1:name "Feature" ;
                        ns1:node <https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/FeatureShape> ;
                        ns1:path <https://neuroshapes.org/feature> ],
                    [ ns1:description "Extra recordings" ;
                        ns1:name "Extra recordings" ;
                        ns1:nodeKind ns1:BlankNode ;
                        ns1:path <https://neuroshapes.org/extraRecordings> ],
                    [ ns1:datatype xsd:string ;
                        ns1:description "Protocol type, e.g. StepThreshold" ;
                        ns1:name "Protocol type" ;
                        ns1:path <https://neuroshapes.org/protocolType> ],
                    [ ns1:description "The shape of the stimulus" ;
                        ns1:name "Stimulus" ;
                        ns1:node <https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/StimulusShape> ;
                        ns1:path <https://neuroshapes.org/stimulus> ] ] <https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/StimulusShape> <https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/FeatureShape> ) ;
    ns1:nodeKind ns1:IRI ;
    ns1:targetClass <https://neuroshapes.org/ElectrophysiologyFeatureOptimisationTarget>,
        <https://neuroshapes.org/ElectrophysiologyFeatureValidationTarget> .

<https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/FeatureShape> a ns1:NodeShape ;
    rdfs:label "Feature shape definition"^^xsd:string ;
    ns1:property [ ns1:name "Offest time" ;
            ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
            ns1:path <https://neuroshapes.org/offsetTime> ],
        [ ns1:name "Onset time" ;
            ns1:node <https://neuroshapes.org/commons/quantitativevalue/shapes/QuantitativeValueShape> ;
            ns1:path <https://neuroshapes.org/onsetTime> ],
        [ ns1:maxCount 1 ;
            ns1:minCount 1 ;
            ns1:name "Feature name" ;
            ns1:path <http://schema.org/name> ] .

<https://neuroshapes.org/dash/electrophysiologyfeaturetarget/shapes/StimulusShape> a ns1:NodeShape ;
    rdfs:label "Stimulus shape definition"^^xsd:string ;
    ns1:property [ ns1:datatype xsd:string ;
            ns1:maxCount 1 ;
            ns1:path <https://neuroshapes.org/recordingLocation> ],
        [ ns1:name "Stimulus target" ;
            ns1:path <https://neuroshapes.org/stimulusTarget> ],
        [ ns1:maxCount 1 ;
            ns1:name "Stimulus type" ;
            ns1:node <https://neuroshapes.org/commons/labeledontologyentity/shapes/LabeledOntologyEntityShape> ;
            ns1:path <https://neuroshapes.org/stimulusType> ] .

